extends template

block content
  .container.mt-4
    h1.text-center.mb-4= product.title

    .row
      .col-md-6
        img.img-fluid(src=product.image, alt=product.title)
      .col-md-6
        h3 Price: $#{product.price}
        p.mb-2= product.description
        p In stock: #{product.stock}
        a.btn.btn-primary(href=`/category/${category}`) Back to #{category.charAt(0).toUpperCase() + category.slice(1)}
